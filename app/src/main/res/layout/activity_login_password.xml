<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.password.LoginPasswordActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/md_logo_width"
        android:layout_height="@dimen/md_logo_height"
        android:layout_marginTop="@dimen/md_huge_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/md_view_medium_width"
        android:layout_height="204dp"
        android:layout_marginBottom="@dimen/md_medium_margin"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="119dp"
        android:layout_height="17dp"
        android:layout_marginLeft="@dimen/md_normal_margin"
        android:layout_marginTop="22dp"
        android:text="@string/login_type_cpf"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/dirtyBlue"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/CpfTextView"
        android:layout_width="121dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/md_normal_margin"
        android:layout_marginTop="16dp"
        android:textColor="@color/dirtyBlue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="@dimen/md_normal_margin"
        android:layout_marginBottom="14dp"
        android:text="@string/login_type_password"
        android:textColor="@color/dirtyBlue"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintStart_toStartOf="@+id/view2" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_normal_margin"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPassword"
        android:textColor="@color/dirtyBlue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/md_small_margin"
        android:layout_marginRight="@dimen/md_small_margin"
        android:layout_marginBottom="@dimen/md_normal_margin"
        android:text="@string/login_password_remember_cpf"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/switch2" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/md_medium_margin"
        android:layout_marginRight="@dimen/md_medium_margin"
        android:layout_marginBottom="@dimen/md_normal_margin"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/goToHomePageImage"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/group_2" />

    <ImageView
        android:id="@+id/seePasswordImage"
        android:layout_width="19dp"
        android:layout_height="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:srcCompat="@drawable/eye_2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="16dp"
        android:layout_marginBottom="@dimen/md_big_margin"
        android:text="@string/login_password_button"
        android:textColor="@color/dirtyBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>